{
  "adc.sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "extends": [
            "sensor.SENSOR_SCHEMA",
            "core.COMPONENT_SCHEMA"
          ],
          "config_vars": {
            "id": {
              "key": "GeneratedID"
            },
            "unit_of_measurement": {
              "key": "Optional",
              "default": "V",
              "type": "string"
            },
            "accuracy_decimals": {
              "key": "Optional",
              "default": "2",
              "type": "integer"
            },
            "device_class": {
              "key": "Optional",
              "default": "voltage",
              "type": "enum",
              "values": [
                "",
                "aqi",
                "battery",
                "carbon_dioxide",
                "carbon_monoxide",
                "current",
                "energy",
                "gas",
                "humidity",
                "illuminance",
                "monetary",
                "nitrogen_dioxide",
                "nitrogen_monoxide",
                "nitrous_oxide",
                "ozone",
                "pm1",
                "pm10",
                "pm25",
                "power",
                "power_factor",
                "pressure",
                "signal_strength",
                "sulphur_dioxide",
                "temperature",
                "timestamp",
                "volatile_organic_compounds",
                "voltage"
              ]
            },
            "state_class": {
              "key": "Optional",
              "default": "measurement",
              "type": "enum",
              "values": [
                "",
                "measurement",
                "total_increasing"
              ]
            },
            "pin": {
              "key": "Required",
              "internal": true,
              "modes": [
                "input"
              ],
              "type": "pin"
            },
            "raw": {
              "key": "Optional",
              "default": "False",
              "type": "boolean"
            },
            "attenuation": {
              "key": "Optional",
              "type": "enum",
              "values": [
                "0db",
                "2.5db",
                "6db",
                "11db",
                "auto"
              ]
            },
            "update_interval": {
              "key": "Optional",
              "default": "60s"
            }
          }
        }
      }
    }
  }
}