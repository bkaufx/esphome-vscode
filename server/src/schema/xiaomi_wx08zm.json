                  },
                  "icon": {
                    "key": "Optional",
                    "default": "mdi:bug"
                  },
                  "accuracy_decimals": {
                    "key": "Optional",
                    "default": "0",
                    "type": "integer"
                  },
                  "state_class": {
                    "key": "Optional",
                    "default": "measurement",
