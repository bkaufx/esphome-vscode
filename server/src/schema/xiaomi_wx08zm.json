            "esp32_ble_tracker.ESP_BLE_DEVICE_SCHEMA",
            "core.COMPONENT_SCHEMA"
          ],
          "config_vars": {
            "id": {
              "key": "GeneratedID"
            },
            "mac_address": {
              "key": "Required"
