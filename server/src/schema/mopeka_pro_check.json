{
  "mopeka_pro_check.sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "config_vars": {
          "id": {
            "key": "GeneratedID"
          },
          "mac_address": {
            "key": "Required"
          },
          "custom_distance_full": {
            "key": "Optional"
          },
          "custom_distance_empty": {
            "key": "Optional"
          },
          "tank_type": {
            "key": "Required",
            "type": "enum",
            "values": [
              "CUSTOM",
              "20LB_V",
              "30LB_V",
              "40LB_V"
            ]
          },
          "temperature": {
            "key": "Optional",
            "type": "schema",
            "schema": {
              "extends": [
                "sensor.SENSOR_SCHEMA"
              ],
              "config_vars": {
                "unit_of_measurement": {
                  "default": "\u00b0C"
                },
                "icon": {
                  "default": "mdi:thermometer"
                },
                "accuracy_decimals": {
                  "default": "0"
                },
                "device_class": {
                  "default": "temperature"
                },
                "state_class": {
                  "default": "measurement"
                }
              }
            }
          },
          "level": {
            "key": "Optional",
            "type": "schema",
            "schema": {
              "extends": [
                "sensor.SENSOR_SCHEMA"
              ],
              "config_vars": {
                "unit_of_measurement": {
                  "default": "%"
                },
                "icon": {
                  "default": "mdi:propane-tank"
                },
                "accuracy_decimals": {
                  "default": "0"
                },
                "state_class": {
                  "default": "measurement"
                }
              }
            }
          },
          "distance": {
            "key": "Optional",
            "type": "schema",
            "schema": {
              "extends": [
                "sensor.SENSOR_SCHEMA"
              ],
              "config_vars": {
                "unit_of_measurement": {
                  "default": "mm"
                },
                "icon": {
                  "default": "mdi:ruler"
                },
                "accuracy_decimals": {
                  "default": "0"
                },
                "state_class": {
                  "default": "measurement"
                }
              }
            }
          },
          "battery_level": {
            "key": "Optional",
            "type": "schema",
            "schema": {
              "extends": [
                "sensor.SENSOR_SCHEMA"
              ],
              "config_vars": {
                "unit_of_measurement": {
                  "default": "%"
                },
                "accuracy_decimals": {
                  "default": "0"
                },
                "device_class": {
                  "default": "battery"
                },
                "state_class": {
                  "default": "measurement"
                }
              }
            }
          }
        },
        "extends": [
          "esp32_ble_tracker.ESP_BLE_DEVICE_SCHEMA",
          "core.COMPONENT_SCHEMA"
        ]
      }
    }
  }
}