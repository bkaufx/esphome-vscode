{
  "logger": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "config_vars": {
          "id": {
            "key": "GeneratedID"
          },
          "baud_rate": {
            "key": "Optional",
            "default": "115200",
            "type": "integer"
          },
          "tx_buffer_size": {
            "key": "Optional",
            "default": "512"
          },
          "deassert_rts_dtr": {
            "key": "Optional",
            "default": "False",
            "type": "boolean"
          },
          "hardware_uart": {
            "key": "Optional",
            "default": "UART0"
          },
          "level": {
            "key": "Optional",
            "default": "DEBUG",
            "type": "enum"
          },
          "logs": {
            "key": "String",
            "default": "{}",
            "key_dump": "<function string at 0x000001993F6DC670>",
            "type": "schema",
            "schema": {
              "config_vars": {
                "<function string at 0x000001993F6DC670>": {
                  "type": "enum"
                }
              }
            }
          },
          "on_message": {
            "key": "Optional",
            "type": "trigger",
            "schema": {
              "config_vars": {
                "level": {
                  "key": "Optional",
                  "default": "WARN",
                  "type": "schema",
                  "schema": {
                    "extends": [
                      "logger.is_log_level"
                    ]
                  }
                },
                "then": {
                  "type": "trigger"
                }
              }
            }
          },
          "esp8266_store_log_strings_in_flash": {
            "key": "Optional",
            "default": "True",
            "type": "boolean"
          }
        },
        "extends": [
          "core.COMPONENT_SCHEMA"
        ]
      },
      "is_log_level": {
        "type": "enum",
        "values": [
          "NONE",
          "ERROR",
          "WARN",
          "INFO",
          "DEBUG",
          "VERBOSE",
          "VERY_VERBOSE"
        ]
      },
      "LOGGER_LOG_ACTION_SCHEMA": {}
    },
    "action": {
      "log": {
        "type": "schema",
        "schema": {
          "extends": [
            "logger.LOGGER_LOG_ACTION_SCHEMA"
          ]
        }
      }
    }
  }
}