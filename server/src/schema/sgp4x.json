{
  "sgp4x.sensor": {
    "schemas": {
      "GAS_SENSOR": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "algorithm_tuning": {
              "key": "Optional",
              "type": "schema",
              "schema": {
                "config_vars": {
                  "index_offset": {
                    "key": "Optional",
                    "default": "100",
                    "type": "integer"
                  },
                  "learning_time_offset_hours": {
                    "key": "Optional",
                    "default": "12",
                    "type": "integer"
                  },
                  "learning_time_gain_hours": {
                    "key": "Optional",
                    "default": "12",
                    "type": "integer"
                  },
                  "gating_max_duration_minutes": {
                    "key": "Optional",
                    "default": "720",
                    "type": "integer"
                  },
                  "std_initial": {
                    "key": "Optional",
                    "default": "50",
                    "type": "integer"
                  },
                  "gain_factor": {
                    "key": "Optional",
                    "default": "230",
                    "type": "integer"
                  }
                }
              }
            }
          }
        }
      },
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "id": {
              "key": "GeneratedID",
              "id_type": {
                "class": "sgp4x::SGP4xComponent",
                "parents": [
                  "sensor::Sensor",
                  "EntityBase",
                  "PollingComponent",
                  "Component",
                  "sensirion_common::SensirionI2CDevice",
                  "i2c::I2CDevice"
                ]
              }
            },
            "voc": {
              "key": "Optional",
              "type": "schema",
              "schema": {
                "extends": [
                  "sensor.SENSOR_SCHEMA",
                  "sgp4x.sensor.GAS_SENSOR"
                ],
                "config_vars": {
                  "icon": {
                    "default": "mdi:radiator"
                  },
                  "accuracy_decimals": {
                    "default": "0"
                  },
                  "device_class": {
                    "default": "volatile_organic_compounds"
                  },
                  "state_class": {
                    "default": "measurement"
                  }
                }
              }
            },
            "nox": {
              "key": "Optional",
              "type": "schema",
              "schema": {
                "extends": [
                  "sensor.SENSOR_SCHEMA",
                  "sgp4x.sensor.GAS_SENSOR"
                ],
                "config_vars": {
                  "icon": {
                    "default": "mdi:radiator"
                  },
                  "accuracy_decimals": {
                    "default": "0"
                  },
                  "device_class": {
                    "default": "nitrous_oxide"
                  },
                  "state_class": {
                    "default": "measurement"
                  }
                }
              }
            },
            "store_baseline": {
              "key": "Optional",
              "default": "True",
              "type": "boolean"
            },
            "voc_baseline": {
              "key": "Optional",
              "data_type": "hex_uint16_t"
            },
            "compensation": {
              "key": "Optional",
              "type": "schema",
              "schema": {
                "config_vars": {
                  "humidity_source": {
                    "key": "Required",
                    "use_id_type": "sensor::Sensor",
                    "type": "use_id"
                  },
                  "temperature_source": {
                    "key": "Required",
                    "use_id_type": "sensor::Sensor",
                    "type": "use_id"
                  }
                }
              }
            },
            "update_interval": {
              "key": "Optional",
              "default": "60s"
            },
            "i2c_id": {
              "key": "GeneratedID",
              "use_id_type": "i2c::I2CBus",
              "type": "use_id"
            },
            "address": {
              "key": "Optional",
              "default": "89",
              "data_type": "hex_uint8_t"
            }
          },
          "extends": [
            "core.COMPONENT_SCHEMA"
          ]
        }
      }
    }
  }
}