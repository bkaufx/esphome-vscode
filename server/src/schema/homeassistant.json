{
  "homeassistant": {
    "action": {
      "service": {
        "type": "schema",
        "schema": {
          "extends": [
            "api.HOMEASSISTANT_SERVICE_ACTION_SCHEMA"
          ]
        }
      },
      "event": {
        "type": "schema",
        "schema": {
          "extends": [
            "api.HOMEASSISTANT_EVENT_ACTION_SCHEMA"
          ]
        }
      },
      "tag_scanned": {
        "is_list": true,
        "type": "schema",
