{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["ES2019"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "out",
    "rootDir": "src",
    "skipLibCheck": true // remove when fixed issue with vscode-json-languageservice
  },
  "include": ["src", "src/*.json"],
  "exclude": ["node_modules", ".vscode-test"]
}
